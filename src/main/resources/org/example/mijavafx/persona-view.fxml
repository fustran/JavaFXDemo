<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mijavafx.PersonaController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TableView fx:id="tablaPersonas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="columnaNombre" text="Nombre" prefWidth="120"/>
            <TableColumn fx:id="columnaEdad" text="Edad" prefWidth="80"/>
            <TableColumn fx:id="columnaCiudad" text="Ciudad" prefWidth="120"/>
        </columns>
    </TableView>

    <TextField fx:id="nombre" promptText="Inserta tu nombre"/>
    <TextField fx:id="edad" promptText="Inserta tu edad"/>
    <TextField fx:id="ciudad" promptText="Inserta tu ciudad"/>

    <Button mnemonicParsing="false" text="GUARDAR" onAction="#guardarPersona">
       <font>
          <Font size="18.0"/>
       </font>
    </Button>

    <Button onAction="#cambioPantalla2" text="Ir a pantalla 2"/>
    <Button onAction="#irAlInicio" text="Volver a Hello Controller"/>

</VBox>